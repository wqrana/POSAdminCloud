@model AdminPortalModels.ViewModels.UserRoleModel

@{
    ViewBag.Menu = "Security";
    ViewBag.SubMenu = "UserRoles";

    ViewBag.Title = "Users Role";
}


<style>
    .modalcontentCSS {
        height: 200px;
    }

    #permissionDiv label {
        font-size: 12px;
    }

    .firstCol {
        width: 135px;
    }
</style>
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

@Styles.Render("~/Content/themes/datatables/css")

<div class="row">

    @Html.Hidden("CreateUserRoles", MSA_AdminPortal.Helpers.SecurityManager.CreateUserRoles)
    @Html.Hidden("UpdateUserRoles", MSA_AdminPortal.Helpers.SecurityManager.UpdateUserRoles)
    @Html.Hidden("DeleteUserRoles", MSA_AdminPortal.Helpers.SecurityManager.DeleteUserRoles)
    <div class="col-md-12">

        <h2>@ViewBag.Title</h2>
        <ul class="page-breadcrumb breadcrumb">

            <li>
                <i class="fa fa-lock fa-fw"></i>
                <a href="#">Security</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">User Role</a>
</li>
        </ul>
        <div class="col-md-2" style="margin-bottom: 10px; padding-left: 0px;">
            <div class="btn-group pull-left">
                <a href="#" onclick="location.href='@Url.Action("UserRoles", new { id = 0 })'" id="aAddNewButton" data-toggle="modal" class="ActionLink" data-id='0'>
                    <div id="sub-div">
                        <button id="AddNewButton" class="btn green" style="width: 160px;">
                            Add New User Role
                        </button>
                    </div>
                </a>
            </div>
        </div>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover " id="dtUserRoleTable">

            <thead>
                <tr>
                    <th class="center sorting_disabled">
                        Actions
                    </th>
                    <th>
                        User Role Name
                    </th>
                    <th>Admin HQ System</th>
                    <th>Assigned Users</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@{Html.RenderAction("Delete");}

<div class="modal fade" id="userattached" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog" style="width: 415px; margin-top: 193px;">
        <div class="modal-content modalcontentCSS">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                User Role can not be deleted
            </div>
            <div class="modal-body">
                <div class="scroller1" style="height: 25px" data-always-visible="1" data-rail-visible1="1">
                    This User Role is assigned to <strong><span id="spanUserscount"></span></strong> user(s). Please reassign the user(s) to a new User Role first.
                </div>
            </div>
            <br />
            <div class="modal-footer" style="border-top: 0px;">
                <a href="#" class="btn default btn-lg" id="btnCloseUserRole"data-dismiss="modal">Close</a>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="modal fade" id="UserRolePopup" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog" style="width: 750px; margin-top: 100px;">
        <div class="modal-content" style="min-height:177px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                User Role Detail
            </div>
            <div class="modal-body">
                <div id="permissionDiv" class="scroller1" data-always-visible="1" data-rail-visible1="1">
                </div>
            </div>

            <div class="modal-footer" style="border-top: 0px;">
                <a href="#" class="btn default btn-lg" id="btnCloseUserRoleTable" data-dismiss="modal">Close</a>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@Scripts.Render("~/Content/themes/datatables/js")


<script src="~/Content/themes/assets/global/scripts/metronic.js"></script>


<script src="~/Scripts/userRole.js"></script>
