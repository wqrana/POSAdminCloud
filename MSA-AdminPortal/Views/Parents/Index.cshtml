@{
    ViewBag.Menu = "Parents";
    //ViewBag.SubMenu = "Dashboard";

    ViewBag.Title = "Parents";
}

<style>
    .select2-container
    {
        margin-bottom: -19px !important;
    }
</style>

@Styles.Render("~/Content/themes/datatables/css")

<link href="~/Content/CustomCSS/Parent.css" rel="stylesheet" />
<link href="~/Content/CustomCSS/viewButtons.css" rel="stylesheet" />


<!-- BEGIN PAGE CONTENT-->
<div class="row">

    @*@Html.Hidden("CreateUsers", MSA_AdminPortal.Helpers.SecurityManager.CreateUsers)
    @Html.Hidden("UpdateUsers", MSA_AdminPortal.Helpers.SecurityManager.UpdateUsers)
    @Html.Hidden("DeleteUsers", MSA_AdminPortal.Helpers.SecurityManager.DeleteUsers)*@
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h2>@ViewBag.Title</h2>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-users"></i>
                <a href="#">@ViewBag.Title</a>
            </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="col-md-1" style="padding-right: 0px; margin-right: 0px;">
            <label class="control-label" style="padding-top: 4px; margin-top: 5px;">Search By:</label>
        </div>
        <div class="col-md-3" style="padding: 0px; margin-left: 0px;">
            @Html.DropDownList("searchdll", new SelectList(ViewBag.SearchByList, "id", "name", "1"), new { style = "width: 250px; border: 1px solid #808080;" })
        </div>
        <div class="col-md-5" style="padding-right: 0px;">
            <div class="col-md-12">
                <div class="col-md-2" style="padding-right: 0px; padding-top: 5px;">
                    <label class="control-label">Search</label>
                </div>
                <div class="col-md-7" style="padding-left: 0px; padding-right: 0px; width: 228px;">
                    <input type="text" class="form-control" style="width: 220px;" id="SearchStr" value="" name="SearchStr" />
                </div>
                <div class="col-md-3" style="padding-left: 0px;">
                    <button class="btn yellow" style="width: 120px;" id="SearchBtn">
                        Search
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            &nbsp;
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover table-bordered" id="dtParentsGrid">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>Parent Name</th>
                    <th>Email Address</th>
                    <th>Phone</th>
                    <th>Students</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
@{
    Html.RenderAction("ParentDetailPopup");
    Html.RenderAction("StudentDetailPopup");  
}

@Scripts.Render("~/Content/themes/datatables/js")
<script type="text/javascript" src="../Content/themes/assets/global/plugins/bootstrap-daterangepicker/moment.min.js"></script>
<script src="~/scripts/Parents.js" type="text/javascript"></script>
<script src="~/Content/themes/assets/global/scripts/metronic.js"></script>






