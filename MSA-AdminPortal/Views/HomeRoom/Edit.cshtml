@model AdminPortalModels.Models.HomeRoomUpdateModel

@{
    ViewBag.Menu = "Customer Data";
    ViewBag.SubMenu = "Homerooms";
}


@Styles.Render("~/Content/themes/datatables/css")
<link rel="stylesheet" href="~/Content/Shared/Edit Page/EditPage.css" />
<link href="~/Content/Shared/Common/SelectList.css" rel="stylesheet" />


@Html.HiddenFor(model => model.Id)

<!-- Begin Page Title and Breadcrumb -->
<div class="row">
    <div class="col-md-12">
        <h2>Edit Homeroom</h2>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-user fa-fw"></i>
                <a href="#">@ViewBag.Menu</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#"> @ViewBag.SubMenu</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Edit</a>
            </li>
        </ul>
    </div>
</div>
<!-- End Page Title and Breadcrumb -->
<div class="row" style="padding: 0 15px 0 15px; overflow: hidden;">
    <div class="col-md-12">
        <div class="row" style="border-top: 1px solid rgb(229, 229, 229); border-bottom: 1px solid rgb(229, 229, 229);">
            <div class="form-horizontal">
                <div class="col-md-6" style="padding-top: 20px; padding-bottom:10px;">
                    <div class="form-body">
                        <div class="form-group">
                            <label for="Name" class="col-md-3 control-label">Homeroom <span class="required">*</span></label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", maxlength = 10 })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="School" class="col-md-3 control-label">School <span class="required">*</span></label>
                            @Html.DropDownListFor(m => m.School_Id, Model.Schools, "-- Select --", new { @class = "col-md-9", @id = "SchoolList", @width = "100%", @height = "100%" })
                        </div>
                        <div class="form-actions top fluid">
                            <div class="col-md-offset-3 col-md-9">
                                <button value="Submit" name="action" id="btnHomeRoomEdit" class="btn blue btn-lg submitClass defaultBtnClass">SAVE</button>
                                <button value="Cancel" name="action" onclick="RedirectToIndex('/Homeroom');" class="btn btn-lg default not-default-btn">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Homeroom/HomeroomEdit.js" type="text/javascript"></script>
