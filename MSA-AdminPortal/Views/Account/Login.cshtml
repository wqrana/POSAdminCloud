<!-- BEGIN BODY -->
<body class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <img src="/content/img/logo-big.png" alt="" />
    </div>
    <!-- END LOGO -->
    <div class="portlet-title">
        <div class="caption">
            ADMIN <strong>HEADQUARTERS</strong>
        </div>

    </div>
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->

        @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()
@*<form class="login-form" action="index.html" method="post">

            *@<h4 class="form-title">Login to Admin.</h4>
            <div class="alert alert-danger display-hide">
