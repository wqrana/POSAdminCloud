                <button class="close" data-close="alert"></button>
                <span>            
                    *@
            
            @Html.ValidationSummary()
@*
                </span>
            </div>*@
            
            
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    @*@Html.EditorFor(model => model.UserName, new { @class = "form-control placeholder-no-fix" }, { "placeholder", "Username" },{"name","username"} )*@
                    <input class="form-control placeholder-no-fix" type="text" placeholder="Username" name="username" value="@Model.UserName" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    @*@Html.EditorFor(model => model.Password, new { attributes = new Dictionary<string, string>() { { "class", "form-control placeholder-no-fix" }, { "placeholder", "Password" },{"name","password"} , {"type","password"}} })*@
                    <input class="form-control placeholder-no-fix" type="password" placeholder="Password" name="password" value="@Model.Password" />
                </div>
            </div>
            <div class="form-actions">
                <label class="checkbox">
                    @Html.EditorFor(model => model.RememberMe)
                    Remember me
                </label>
                <button type="submit" class="btn blue pull-right">
                    Login <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
@*</form>*@
        }
        <!-- END LOGIN FORM -->
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        @DateTime.Now.Year &copy Food Service Solutions, Inc.
