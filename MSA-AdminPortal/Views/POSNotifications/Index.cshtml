@using AdminPortalModels.ViewModels
@model  IList<AdminPortalModels.ViewModels.POSNotificationsViewModel>


@{
    ViewBag.Menu = "Customer Data";
    ViewBag.SubMenu = "POSNotifications";
    ViewBag.Title = "POS Notifications";
}

@Styles.Render("~/Content/themes/datatables/css")

@*<link href="/Content/CustomCSS/viewButtons.css" rel="stylesheet">*@
<link href="~/Content/CustomCSS/POSNotifications.css" rel="stylesheet" />
<link href="~/Content/spectrum-master/spectrum-master/spectrum.css" rel="stylesheet" />


<div class="row">
    @Html.Hidden("CreatePOSNotifications", MSA_AdminPortal.Helpers.SecurityManager.CreatePOSNotifications)
    @Html.Hidden("UpdatePOSNotifications", MSA_AdminPortal.Helpers.SecurityManager.UpdatePOSNotifications)
    @Html.Hidden("DeletePOSNotifications", MSA_AdminPortal.Helpers.SecurityManager.DeletePOSNotifications)
    @Html.Hidden("viewPOSNotifications", MSA_AdminPortal.Helpers.SecurityManager.viewPOSNotifications)
    <input type="hidden" id="hdnPOSNotificationId" name="SingleSelect" value="3" />
    @*@Html.Hidden("adminOrDirector", "admin")*@

    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h2>@ViewBag.Title</h2>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-user fa-fw"></i>
                <a href="#">Customer Data</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">POS Notifications</a>
            </li>
        </ul>
        <div class="col-md-2" style="margin-bottom: 10px; padding-left: 0px;">
            <div class="btn-group pull-left">
                <a href="#basic_modalPopup" id="aAddNewPOSNotifications" data-toggle="modal" data-backdrop="static" data-keyboard="false" class="ActionLink" data-id='0' onclick='javascript:CreateOrEdit(this);'>
                    <div id="sub-div">
                        <button id="btnAddNewPOSNotifications" class="btn green" style="width: 200px;">
                            Add New POS Notification
                        </button>
                    </div>
                </a>
            </div>
        </div>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>


</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover" id="POSNotificationsList">

            <thead>
                <tr>
                    <th>
                        Actions
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Code
                    </th>
                    <th>
                        Description
                    </th>
                    <th style="display:none">
                        Text Color
                    </th>
                    <th style="display:none">
                        Back Color
                    </th>
                    <th style="display:none">
                        CustomerPOSNotificationPSV
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (POSNotificationsViewModel obj in Model)
                    {
                        <tr class="">
                            <td><span hidden>@obj.Id</span></td>
                            <td>@obj.Name</td>
                            <td>@obj.Code</td>
                            <td>@obj.Description</td>
                            <td style="display: none">@obj.TextColor</td>
                            <td style="display: none">@obj.BackColor</td>
                            <td style="display: none">@obj.CustomerPOSNotificationPSV</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>



@Html.Partial("popup")
@{Html.RenderAction("Delete");}

@Scripts.Render("~/Content/themes/datatables/js")


@Html.Partial("_CustomerSerachPop")
<script type="text/javascript" src="~/Scripts/CustSearchPopup.js"></script>

@*<link href="~/Content/spectrum-master/spectrum-master/docs/jquery-1.9.1.js" rel="stylesheet" />*@
<script src="~/scripts/POSNotifications/POSNotificationsList.js" type="text/javascript"></script>
<script src="~/Content/themes/assets/global/scripts/metronic.js"></script>
<script src="~/Content/spectrum-master/spectrum-master/spectrum.js"></script>


