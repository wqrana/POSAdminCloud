@using System.Configuration

<div class="modal fade" id="About" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="width: 415px; margin-top: 193px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">About MySchoolAccount</h4>
            </div>
            <div class="modal-body">
                <div style="text-align:center;">
                    <div class="logo">
                        <img src="/content/img/logo-big.png" alt="" />
                    </div>
                    <div>&nbsp;</div>
                    <div class="well" style="margin-left:-15px; margin-right:-15px; margin-bottom:0px;">
                        <div>
                            Product Version <strong>@ConfigurationManager.AppSettings["ProductVersion"]</strong>
                        </div>
                        <div>&nbsp;</div>
                        <div>
                            Visit <a href="https://www.myschoolaccount.com/" target="_blank">https://www.myschoolaccount.com</a> for more information.
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="border-top: 0px;">
                <hr />
                <a href="#" class="btn btn-primary btn-sm" data-dismiss="modal">Close</a>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


