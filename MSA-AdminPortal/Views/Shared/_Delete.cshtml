@model  AdminPortalModels.Models.DeleteModel

@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.DeleteUrl)

<div class="modal fade" id="Delete" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog" style="width: 415px; margin-top: 193px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close not-default-btn" data-dismiss="modal" aria-hidden="true"></button>
                Delete @Html.DisplayFor(model => model.Title): <strong><span id="span-del-title">@Html.DisplayFor(model => model.Name)</span></strong>
            </div>
            <div class="modal-body">
                <div class="scroller1" style="height: 25px" data-always-visible="1" data-rail-visible1="1">
                  <h4 id="h4text">Are you sure you want to delete this @Html.DisplayFor(model => model.Title)? </h4>
                </div>
            </div>
            <div id="deleteModalFooter" class="modal-footer" style="border-top: 0px;">
               
                <a href="#" type="button" class="btn blue btn-lg margleft10 not-default-btn" id="btnDelete" name="btnDelete" disabled>Delete</a>
                <a href="#"  type="button" class="btn default btn-lg defaultBtnClass" data-dismiss="modal">Close</a>
               
                                
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script type="text/javascript" src="/Scripts/delete.js"></script>

