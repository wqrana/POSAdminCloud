@{
    ViewBag.Menu = "Settings";
    ViewBag.SubMenu = "Districts";

    ViewBag.Title = "Districts";
}

@Styles.Render("~/Content/themes/datatables/css")

<link href="/content/district.css" rel="stylesheet" />
<link href="~/Content/CustomCSS/viewButtons.css" rel="stylesheet" />
<div class="row">
    @Html.Hidden("CreateDistricts",MSA_AdminPortal.Helpers.SecurityManager.CreateDistricts)
    @Html.Hidden("UpdateDistricts",MSA_AdminPortal.Helpers.SecurityManager.UpdateDistricts)
    @Html.Hidden("DeleteDistricts",MSA_AdminPortal.Helpers.SecurityManager.DeleteDistricts)

    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h2>@ViewBag.Title</h2>
        <ul class="page-breadcrumb breadcrumb">
            <li class="btn-group pull-right">
                <button type="button" class="btn default btn-md pull-right marginTileBtn selectedBtn" title="List View" onclick="javascript:location.href='/district/Table'">
                    List View
                </button>

                <button type="button" class="btn default btn-md pull-right unselectedBtn" title="Tile View" onclick="javascript:location.href='/district/Tile'">
                    Tile View
                </button>
            </li>
            <li>
                <i class="fa fa-cogs fa-fw"></i>
                <a href="#">Settings</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">@ViewBag.Title</a>
            </li>
        </ul>
        <div class="col-md-2" style="margin-bottom: 10px; padding-left: 0px;">
            <div class="btn-group pull-left">
                <a href="#CreateOrEdit" id="aAddNewDistrict" data-toggle="modal" class="ActionLink" data-id='0'>
                     <div id="sub-div">  <button id="btnAddNewDistrict" class="btn green" style="width: 160px;">
                        Add New District
                    </button></div>
                </a>
            </div>
        </div>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover " id="dtGrid">

            <thead>
                <tr>
                    <th>Actions
                    </th>
                    <th>District Name1
                    </th>
                    <th>District Name
                    </th>

                    <th>Phone
                    </th>
                    <th>Address
                    </th>
                    <th>City
                    </th>
                    <th>State
                    </th>
                    <th>Schools Assigned
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@{Html.RenderAction("Delete");}

@Scripts.Render("~/Content/themes/datatables/js")

<script src="/scripts/district.js" type="text/javascript"></script>
<script src="~/Content/themes/assets/global/scripts/metronic.js"></script>
