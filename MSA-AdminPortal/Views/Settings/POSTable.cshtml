@model  AdminPortalModels.ViewModels.POSPageVM
@{
    ViewBag.Menu = "Settings";
    ViewBag.SubMenu = "POS";

    ViewBag.Title = "POS";
}

<link href="~/Content/CustomCSS/CustomerPopup.css" rel="stylesheet" />
<style>
    .ShowSchool {
        display: block;
    }

    .HideSchool {
        display: none;
    }
</style>

<script type="text/javascript">
</script>

@Styles.Render("~/Content/themes/datatables/css")

<link href="~/Content/CustomCSS/viewButtons.css" rel="stylesheet" />


<!-- BEGIN PAGE CONTENT-->
<div class="row">
    
    @Html.Hidden("UpdatePOS", MSA_AdminPortal.Helpers.SecurityManager.UpdatePOS)
    @Html.Hidden("DeletePOS", MSA_AdminPortal.Helpers.SecurityManager.DeletePOS)

    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h2>POS</h2>
        <ul class="page-breadcrumb breadcrumb">
            <li class="btn-group pull-right">
                <button type="button" class="btn default btn-md pull-right marginTileBtn selectedBtn" title="List View" onclick="javascript:location.href='/settings/POSTable'">
                    List View
                </button>

                <button type="button" class="btn default btn-md pull-right unselectedBtn" title="Tile View" onclick="javascript:location.href='/settings/POSTile'">
                    Tile View
                </button>
            </li>

            <li>
                <i class="fa fa-cogs fa-fw"></i>
                <a href="#">Settings</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">POS</a>
            </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover table-bordered" id="POSTable">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>POS Name
                    </th>
                    <th>School Name
                    </th>
                    <th>Session Status
                    </th>
                    <th style="display:none" >Username
                    </th>
                    <th>Credit Card Enabled <i class="fa fa-credit-card"></i>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


@Html.Partial("popup")
@{Html.RenderAction("Delete");}

<script src="~/Scripts/postable.js"></script>

<script src="~/Content/themes/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>


@Scripts.Render("~/Content/themes/datatables/js")

<script src="~/Scripts/datapost.js"></script>

