@if (ViewBag.Layout == 1)
{
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        Schools
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-hover table-bordered" id="SchoolTable">
                        <thead>
                            <tr>
                                <th>School Name</th>
                                <th>District Name</th>
                                <th>POS Stations</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var district in Model)
                            {
                                foreach (var school in district.SchoolIndexData)
                                {
                                    using (Html.BeginForm("School", "Settings", FormMethod.Post, new { @class = "form-class", name = "form" }))
                                    {
                                @Html.Hidden("schoolid", school.Id) 
                                @Html.Hidden("ClientID", district.ClientID)

                                <tr>
                                    <td>@school.School_Name</td>
                                    <td>@district.DistrictName</td>
                                    <td>@school.POSNum</td>
                                    <td><a href="@Url.Content("~/Settings/Schools/" + school.Id)" class="settingslnk">Edit</a></td>
                                    <td><a href="#deleteModal" role="button" data-backdrop="static" data-keyboard="false" data-toggle="modal" class="deleteschool">Delete</a></td>
                                </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
